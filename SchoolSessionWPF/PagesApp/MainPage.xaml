<Page x:Class="SchoolSessionWPF.PagesApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolSessionWPF.PagesApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>-->

        <!--<TextBlock Grid.ColumnSpan="2" 
                   Text="Добро пожаловать!"
                   FontSize="50"/>-->

        <Button x:Name="btnServices" 
                Grid.Row="1" Grid.Column="0"
                Height="auto" Width="auto"
                Content="Список услуг"
                Click="btnServices_Click"
                Margin="50"/>
        <Button x:Name="btnClientServices"
                Grid.Row="1" Grid.Column="1"
                Height="auto" Width="auto"
                Content="Ближайшие записи"
                Click="btnClientServices_Click"
                Margin="50"/>
    </Grid>
</Page>
